@model RegistroViewModel

@{
    ViewData["Title"] = "Mi Cuenta";
    ViewData["OcultarBarraLateral"] = false;
}

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 650px; margin: auto;">
        <div class="card-body p-5">

            <div class="text-center mb-4">
                <div class="rounded-circle bg-primary bg-opacity-10 d-inline-flex justify-content-center align-items-center"
                     style="width: 90px; height: 90px;">
                    <i class="fas fa-user text-primary" style="font-size: 40px;"></i>
                </div>
                <h3 class="mt-3 fw-bold">Mi Cuenta</h3>
                <p class="text-muted">Información personal y detalles de tu perfil</p>
            </div>

            <div class="list-group list-group-flush mb-4">

                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="text-muted">Nombre</span>
                    <span class="fw-semibold">@Model.Nombre</span>
                </div>

                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="text-muted">Apellido</span>
                    <span class="fw-semibold">@Model.Apellido</span>
                </div>

                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="text-muted">Usuario</span>
                    <span class="fw-semibold">@Model.NombreUsuario</span>
                </div>

                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="text-muted">Correo Electrónico</span>
                    <span class="fw-semibold">@Model.Email</span>
                </div>

                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="text-muted">Teléfono</span>
                    <span class="fw-semibold">@Model.Telefono</span>
                </div>

            </div>

            <div class="text-center">

                <a href="@Url.Action("CambiarContraseña", "Usuarios")"
                   class="btn btn-warning px-4 me-2 rounded-3">
                    <i class="fas fa-key me-1"></i> Cambiar Contraseña
                </a>

                <a href="@Url.Action("Logout", "Account")"
                   class="btn btn-outline-secondary px-4 rounded-3">
                    <i class="fas fa-sign-out-alt me-1"></i> Cerrar sesión
                </a>

            </div>

        </div>
    </div>
</div>