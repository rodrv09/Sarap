@model List<Sarap.Models.Empleado> <!-- Define que la vista recibirá una lista de objetos Empleado -->

@{
    ViewBag.Title = "Empleados"; // Título de la página
    Layout = "~/Views/Shared/_Layout.cshtml"; // Plantilla/layout que se va a usar
}

<h2 class="mb-4 text-dark">Registro de Empleados</h2> <!-- Título principal -->

<!-- Mensaje de éxito si existe un mensaje en TempData["Mensaje"] -->
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

<!-- Mensaje de error si existe un mensaje en TempData["Error"] -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

<!-- Botón para abrir el modal de agregar empleado -->
<div class="mb-3">
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#agregarEmpleadoModal">
        <i class="fas fa-plus"></i> Agregar Empleado
    </button>
</div>

<!-- Tabla de empleados -->
<div class="card shadow-sm" style="background: white;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-bordered table-hover w-100 mb-0">
                <thead style="background-color: #2f3e4e; color: white;">
                    <tr>
                        <th>Nombre</th>
                        <th>Identidad</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Dirección</th>
                        <th>Fecha Contratación</th>
                        <th>Días Vacaciones</th>
                        <th>Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var empleado in Model)
                        {
                            <tr>
                                <td>@empleado.Nombre</td>
                                <td>@empleado.Identidad</td>
                                <td>@empleado.Email</td>
                                <td>@empleado.Telefono</td>
                                <td>@empleado.Direccion</td>
                                <td>@empleado.FechaContratacion.ToString("yyyy-MM-dd")</td>
                                <td>@empleado.DiasVacacionesDisponibles</td>
                                <td>
                                    @if (empleado.DiasVacacionesDisponibles > 5)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <!-- Botón de editar -->
                                    <button class="btn btn-sm btn-outline-warning me-1 btnEditarEmpleado"
                                            data-empleado='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(empleado))'>
                                        <i class="fas fa-edit"></i> Editar
                                    </button>

                                    <!-- Activar o desactivar empleado -->
                                    @if (empleado.DiasVacacionesDisponibles > 5)
                                    {
                                        <form asp-action="Desactivar" asp-controller="Empleados" method="get" class="d-inline">
                                            <input type="hidden" name="id" value="@empleado.EmpleadoId" />
                                            <button type="submit" class="btn btn-sm btn-danger me-1">Desactivar</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="Activar" asp-controller="Empleados" method="get" class="d-inline">
                                            <input type="hidden" name="id" value="@empleado.EmpleadoId" />
                                            <button type="submit" class="btn btn-sm btn-success me-1">Activar</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted">No hay empleados registrados.</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

<!-- Modal para agregar nuevo empleado -->
<div class="modal fade" id="agregarEmpleadoModal" tabindex="-1" aria-labelledby="agregarEmpleadoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Formulario que envía los datos al método Crear del controlador Empleados -->
            <form asp-action="Crear" asp-controller="Empleados" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="agregarEmpleadoModalLabel">Agregar Empleado</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <!-- Campos del formulario -->
                    <div class="mb-3">
                        <label for="NombreCrear" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="NombreCrear" name="Nombre" required />
                    </div>
                    <div class="mb-3">
                        <label for="IdentidadCrear" class="form-label">Identidad</label>
                        <input type="text" class="form-control" id="IdentidadCrear" name="Identidad" required />
                    </div>
                    <div class="mb-3">
                        <label for="EmailCrear" class="form-label">Email</label>
                        <input type="email" class="form-control" id="EmailCrear" name="Email" />
                    </div>
                    <div class="mb-3">
                        <label for="TelefonoCrear" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="TelefonoCrear" name="Telefono" />
                    </div>
                    <div class="mb-3">
                        <label for="DireccionCrear" class="form-label">Dirección</label>
                        <input type="text" class="form-control" id="DireccionCrear" name="Direccion" />
                    </div>
                    <div class="mb-3">
                        <label for="FechaContratacionCrear" class="form-label">Fecha de Contratación</label>
                        <input type="date" class="form-control" id="FechaContratacionCrear" name="FechaContratacion" />
                    </div>
                    <div class="mb-3">
                        <label for="DiasVacacionesCrear" class="form-label">Días Vacaciones Disponibles</label>
                        <input type="number" class="form-control" id="DiasVacacionesCrear" name="DiasVacacionesDisponibles" min="0" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">Agregar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal para editar empleado existente -->
<div class="modal fade" id="editarEmpleadoModal" tabindex="-1" aria-labelledby="editarEmpleadoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Formulario que envía los datos al método Editar del controlador Empleados -->
            <form asp-action="Editar" asp-controller="Empleados" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="editarEmpleadoModalLabel">Editar Empleado</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="EmpleadoId" name="EmpleadoId" /> <!-- Campo oculto para ID -->

                    <!-- Campos editables del empleado -->
                    <div class="mb-3">
                        <label for="Nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="Nombre" name="Nombre" required />
                    </div>
                    <div class="mb-3">
                        <label for="Identidad" class="form-label">Identidad</label>
                        <input type="text" class="form-control" id="Identidad" name="Identidad" required />
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="Email" name="Email" />
                    </div>
                    <div class="mb-3">
                        <label for="Telefono" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="Telefono" name="Telefono" />
                    </div>
                    <div class="mb-3">
                        <label for="Direccion" class="form-label">Dirección</label>
                        <input type="text" class="form-control" id="Direccion" name="Direccion" />
                    </div>
                    <div class="mb-3">
                        <label for="FechaContratacion" class="form-label">Fecha de Contratación</label>
                        <input type="date" class="form-control" id="FechaContratacion" name="FechaContratacion" />
                    </div>
                    <div class="mb-3">
                        <label for="DiasVacacionesDisponibles" class="form-label">Días Vacaciones Disponibles</label>
                        <input type="number" class="form-control" id="DiasVacacionesDisponibles" name="DiasVacacionesDisponibles" min="0" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Scripts de la vista -->
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const modalEditar = new bootstrap.Modal(document.getElementById('editarEmpleadoModal'));

            // Agrega evento a todos los botones de editar
            document.querySelectorAll('.btnEditarEmpleado').forEach(btn => {
                btn.addEventListener('click', function () {
                    const empleado = JSON.parse(this.getAttribute('data-empleado'));

                    // Rellenar los campos del formulario de edición con los datos del empleado
                    document.getElementById('EmpleadoId').value = empleado.EmpleadoId;
                    document.getElementById('Nombre').value = empleado.Nombre;
                    document.getElementById('Identidad').value = empleado.Identidad;
                    document.getElementById('Email').value = empleado.Email ?? '';
                    document.getElementById('Telefono').value = empleado.Telefono ?? '';
                    document.getElementById('Direccion').value = empleado.Direccion ?? '';
                    document.getElementById('FechaContratacion').value = empleado.FechaContratacion ? empleado.FechaContratacion.split('T')[0] : '';
                    document.getElementById('DiasVacacionesDisponibles').value = empleado.DiasVacacionesDisponibles;

                    modalEditar.show(); // Mostrar modal
                });
            });
        });
    </script>
}
