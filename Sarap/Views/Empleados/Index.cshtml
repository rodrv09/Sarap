@model IEnumerable<Empleado>

@{
    ViewData["Title"] = "Gestión de Empleados";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-success">Nuevo Empleado</a>

        <form asp-action="Index" method="get" class="form-inline">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Buscar..." />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Buscar</button>
                </div>
            </div>
        </form>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre Completo</th>
                <th>Cédula</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Usuario</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre @item.Apellidos</td>
                    <td>@item.Cedula</td>
                    <td>@item.Email</td>
                    <td>@item.Rol</td>
                    <td>@(item.Usuario?.NombreUsuario ?? "N/A")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>

                        <form asp-action="AssignRole" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <div class="input-group input-group-sm">
                                <select name="role" class="form-control">
                                    <option value="Administrador">Administrador</option>
                                    <option value="Cajero">Cajero</option>
                                    <option value="Bodeguero">Bodeguero</option>
                                    <option value="Vendedor">Vendedor</option>
                                </select>
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-info">Asignar</button>
                                </div>
                            </div>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>