@model Sarap.Models.NotaCredito

@{
    ViewBag.Title = "Crear Nota de Crédito";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    .nota-container {
        max-width: 700px;
        margin: 2rem auto;
        padding: 2rem;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 0 0 10px rgb(0 0 0 / 0.1);
    }

    .nota-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .nota-header h2 {
        font-weight: 700;
        letter-spacing: 1px;
        color: #222;
    }

    label {
        font-weight: 600;
    }

    .form-control {
        padding: 0.5rem;
        font-size: 1rem;
    }

    .btn {
        margin-top: 1rem;
        margin-right: 0.5rem;
    }

    .resumen-factura p {
        margin: 0 0 0.3rem 0;
    }

    .alert-warning {
        padding: 0.75rem;
        margin-bottom: 1rem;
        border-radius: 5px;
    }
</style>

<div class="nota-container">
    <div class="nota-header">
        <h2>Crear Nota de Crédito</h2>
    </div>

    <div class="resumen-factura mb-4">
        <p><strong>Factura No.:</strong> @ViewBag.FacturaNumero</p>
        <p><strong>Cliente:</strong> @ViewBag.FacturaCliente</p>
        <p><strong>Total factura:</strong> @ViewBag.FacturaTotal</p>

        @* Mostrar saldo disponible si el controlador lo envió *@
        @if (ViewBag.SaldoDisponible != null)
        {
            <p class="text-success fw-bold">
                <strong>Saldo disponible para notas de crédito:</strong> 
                @String.Format("{0:C}", ViewBag.SaldoDisponible)
            </p>
        }
    </div>

    @* Mostrar errores generales *@
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-warning">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <form asp-action="CrearNotaCredito" method="post">

        <input type="hidden" asp-for="FacturaID" />

        <div class="mb-3">
            <label asp-for="Fecha" class="form-label"></label>
            <input asp-for="Fecha" class="form-control" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Monto" class="form-label"></label>
            <input asp-for="Monto" class="form-control" />
            <span asp-validation-for="Monto" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Motivo" class="form-label"></label>
            <textarea asp-for="Motivo" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Motivo" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">
            <i class="fas fa-save me-2"></i>Guardar nota
        </button>

        <a asp-controller="NotaCredito" asp-action="Index" class="btn btn-secondary">
            Cancelar
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
