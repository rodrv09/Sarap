@model Sarap.Models.FacturaPaginadaViewModel

@{
    ViewBag.Title = "Facturas";
}

<h2>Facturas</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]
    </div>
}

<a class="btn btn-primary mb-3" asp-action="Crear">+ Nueva Factura</a>

@if (Model.Facturas != null && Model.Facturas.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Cliente</th>
                <th>Total</th>
                <th>Tipo de Pago</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var factura in Model.Facturas)
            {
                <tr>
                    <td>@factura.FacturaID</td>
                    <td>@factura.Fecha.ToShortDateString()</td>
                    <td>@factura.ClienteNombre</td>
                    <td>@factura.Total.ToString("C")</td>
                    <td>@factura.TipoPago</td>
                    <td>
                        <a asp-action="CrearNotaCredito" asp-route-facturaId="@factura.FacturaID" class="btn btn-warning btn-sm me-2">
                            Nota de Crédito
                        </a>
                        <a asp-action="DetalleFactura" asp-route-facturaId="@factura.FacturaID" class="btn btn-info btn-sm">
                            Detalle Factura
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- PAGINACIÓN -->
    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPaginas; i++)
            {
                <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pagina="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
}
else
{
    <div class="alert alert-info">No hay facturas registradas.</div>
}
