@model Sarap.Models.FacturaPaginadaViewModel

@{
    ViewBag.Title = "Facturas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 py-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="m-0 text-primary">
            <i class="fas fa-file-invoice me-2"></i>Facturas
        </h2>
        <a class="btn btn-primary" asp-action="Crear">
            <i class="fas fa-plus me-2"></i>Nueva Factura
        </a>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    @if (Model.Facturas != null && Model.Facturas.Any())
    {
        <div class="card border-0 shadow-lg">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="card-title mb-0"><i class="fas fa-users me-2"></i>Listado de Facturas</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">ID</th>
                                <th>Fecha</th>
                                <th>Cliente</th>
                                <th class="text-end">Total</th>
                                <th>Tipo Pago</th>
                                <th class="text-end pe-4">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var factura in Model.Facturas)
                            {
                                <tr>
                                    <td class="ps-4 fw-semibold">@factura.FacturaID</td>
                                    <td>@factura.Fecha.ToString("dd/MM/yyyy")</td>
                                    <td>@factura.ClienteNombre</td>
                                    <td class="text-end fw-bold text-success">@factura.Total.ToString("C")</td>
                                    <td>
                                        <span class="badge bg-info bg-opacity-10 text-info">
                                            @factura.TipoPago
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-2">                                         
                                            <a asp-action="DetalleFactura" asp-route-facturaId="@factura.FacturaID"
                                               class="btn btn-sm btn-outline-primary" title="Ver Detalle">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- PAGINACIÓN -->
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @if (Model.PaginaActual > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pagina="@(Model.PaginaActual - 1)">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                }

                @for (int i = 1; i <= Model.TotalPaginas; i++)
                {
                    <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pagina="@i">@i</a>
                    </li>
                }

                @if (Model.PaginaActual < Model.TotalPaginas)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pagina="@(Model.PaginaActual + 1)">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
    else
    {
        <div class="alert alert-info shadow-sm">
            <i class="fas fa-info-circle me-2"></i>No hay facturas registradas
        </div>
    }
</div>