@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <!-- Clientes -->
        <div class="col-md-4">
            <div class="card mb-3 border-primary">
                <div class="card-header bg-primary text-white text-center">
                    Clientes
                </div>
                <div class="card-body bg-white text-center">
                    <h5 class="card-title text-primary display-3">@ViewBag.TotalClientes</h5>
                    <p class="card-text text-secondary">Total de clientes registrados.</p>
                </div>
            </div>
        </div>

        <!-- Proveedores -->
        <div class="col-md-4">
            <div class="card mb-3 border-success">
                <div class="card-header bg-success text-white text-center">
                    Proveedores
                </div>
                <div class="card-body bg-white text-center">
                    <h5 class="card-title text-success display-3">@ViewBag.TotalProveedores</h5>
                    <p class="card-text text-secondary">Total de proveedores registrados.</p>
                </div>
            </div>
        </div>

        <!-- Usuarios -->
        <div class="col-md-4">
            <div class="card mb-3 border-info">
                <div class="card-header bg-info text-white text-center">
                    Usuarios
                </div>
                <div class="card-body bg-white text-center">
                    <h5 class="card-title text-info display-3">@ViewBag.TotalUsuarios</h5>
                    <p class="card-text text-secondary">Total de usuarios registrados.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Productos -->
        <div class="col-md-4">
            <div class="card mb-3 border-warning">
                <div class="card-header bg-warning text-white text-center">
                    Productos
                </div>
                <div class="card-body bg-white text-center">
                    <h5 class="card-title text-warning display-3">@ViewBag.TotalProductos</h5>
                    <p class="card-text text-secondary">Total de productos registrados.</p>
                </div>
            </div>
        </div>

        <!-- Empleados -->
        <div class="col-md-4">
            <div class="card mb-3 border-secondary">
                <div class="card-header bg-secondary text-white text-center">
                    Empleados
                </div>
                <div class="card-body bg-white text-center">
                    <h5 class="card-title text-secondary display-3">@ViewBag.TotalEmpleados</h5>
                    <p class="card-text text-secondary">Total de empleados registrados.</p>
                </div>
            </div>
        </div>

        <!-- Facturas -->
        <div class="col-md-4">
            <div class="card mb-3 border-danger">
                <div class="card-header bg-danger text-white text-center">
                    Facturas
                </div>
                <div class="card-body bg-white text-center">
                    <h5 class="card-title text-danger display-3">@ViewBag.TotalFacturas</h5>
                    <p class="card-text text-secondary">Total de facturas registradas.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Registro Horas Quincena -->
        <div class="col-md-4">
            <div class="card mb-3 border-dark">
                <div class="card-header bg-dark text-white text-center">
                    Registro Horas Quincena
                </div>
                <div class="card-body bg-white text-center">
                    <h5 class="card-title text-dark display-3">@ViewBag.TotalRegistroHorasQuincena</h5>
                    <p class="card-text text-secondary">Total de registros de horas quincenales.</p>
                </div>
            </div>
        </div>

        <!-- Planilla Colones -->
        <div class="col-md-4">
            <div class="card mb-3 border-info">
                <div class="card-header bg-info text-white text-center">
                    Planilla Colones
                </div>
                <div class="card-body bg-white text-center">
                    <h5 class="card-title text-info display-3">@ViewBag.TotalPlanillaColones</h5>
                    <p class="card-text text-secondary">Total de registros en planilla colones.</p>
                </div>
            </div>
        </div>

        <!-- Notas de Crédito -->
        
    </div>
</div>
