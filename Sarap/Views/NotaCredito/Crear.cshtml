@model NotaCredito

@{
    ViewBag.Title = "Crear Nota de Crédito";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var factura = ViewBag.FacturaInfo as Factura;
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="m-0 text-primary">
            <i class="fas fa-file-invoice-dollar me-2"></i>@ViewBag.Title
        </h2>
    </div>

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Datos de la Factura</h5>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-3">
                    <label class="form-label">Factura #</label>
                    <input type="text" class="form-control" value="@factura.FacturaID" readonly>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Fecha Factura</label>
                    <input type="text" class="form-control" value="@factura.Fecha.ToString("dd/MM/yyyy")" readonly>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Cliente</label>
                    <input type="text" class="form-control" value="@factura.ClienteNombre" readonly>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-lg mt-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Datos de la Nota de Crédito</h5>
        </div>
        <div class="card-body">
            <form asp-action="Crear">
                <input type="hidden" asp-for="FacturaID" />

                <div class="row mb-3">
                    <div class="col-md-3">
                        <label asp-for="Fecha" class="form-label"></label>
                        <input asp-for="Fecha" class="form-control" />
                        <span asp-validation-for="Fecha" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Monto" class="form-label"></label>
                        <input asp-for="Monto" class="form-control" />
                        <span asp-validation-for="Monto" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label asp-for="Motivo" class="form-label"></label>
                        <textarea asp-for="Motivo" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Motivo" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("SeleccionarFactura")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-2"></i>Guardar Nota
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}