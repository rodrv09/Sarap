@model Sarap.Models.NotaCredito

@{
    ViewBag.Title = "Detalle de Nota de Crédito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="m-0 text-primary">
            <i class="fas fa-file-invoice-dollar me-2"></i>Nota de Crédito #@Model.NotaCreditoID
        </h2>
        <div>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-2"></i>Volver
            </a>
            <a href="@Url.Action("Imprimir", new { id = Model.NotaCreditoID })" target="_blank" class="btn btn-outline-primary">
                <i class="fas fa-print me-2"></i>Imprimir
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Información Básica</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID Nota:</dt>
                        <dd class="col-sm-8">@Model.NotaCreditoID</dd>

                        <dt class="col-sm-4">Factura:</dt>
                        <dd class="col-sm-8">#@Model.FacturaID</dd>

                        <dt class="col-sm-4">Fecha:</dt>
                        <dd class="col-sm-8">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Monto:</dt>
                        <dd class="col-sm-8 text-danger fw-bold">@Model.Monto.ToString("C")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Información de Factura</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.Factura != null)
                    {
                        <dl class="row">
                            <dt class="col-sm-4">Cliente:</dt>
                            <dd class="col-sm-8">@ViewBag.Factura.ClienteNombre</dd>

                            <dt class="col-sm-4">Fecha Factura:</dt>
                            <dd class="col-sm-8">@ViewBag.Factura.Fecha.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-4">Total Factura:</dt>
                            <dd class="col-sm-8">@ViewBag.Factura.Total.ToString("C")</dd>
                        </dl>
                    }
                    else
                    {
                        <div class="alert alert-warning">No se encontró información de la factura asociada.</div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Motivo</h5>
        </div>
        <div class="card-body">
            <p>@Model.Motivo</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Si estamos en la ruta /NotaCredito/Imprimir, dispara automáticamente el diálogo de impresión
        if (window.location.pathname.toLowerCase().includes("/notacredito/imprimir")) {
            window.onload = function () {
                window.print();
            };
        }
    </script>
}
