@model IEnumerable<Sarap.Models.NotaCredito>

@{
    ViewBag.Title = "Notas de Crédito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 py-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="m-0 text-primary">
            <i class="fas fa-file-invoice-dollar me-2"></i>Notas de Crédito
        </h2>
        <a href="@Url.Action("Crear")" class="btn btn-success">
            <i class="fas fa-plus-circle me-2"></i>Nueva Nota
        </a>
    </div>

    <div class="card border-0 shadow-lg">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="card-title mb-0"><i class="fas fa-users me-2"></i>Listado Notas de Crédito</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">ID</th>
                                <th>Factura #</th>
                                <th>Fecha</th>
                                <th class="text-end">Monto</th>
                                <th>Motivo</th>
                                <th class="text-end pe-4">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var nota in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-semibold">@nota.NotaCreditoID</td>
                                    <td>@nota.FacturaID</td>
                                    <td>@nota.Fecha.ToString("dd/MM/yyyy")</td>
                                    <td class="text-end fw-bold text-danger">@nota.Monto.ToString("C")</td>
                                    <td class="text-truncate" style="max-width: 250px;" title="@nota.Motivo">
                                        @nota.Motivo
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a href="@Url.Action("Detalle", new { id = nota.NotaCreditoID })"
                                               class="btn btn-sm btn-outline-primary" title="Ver Detalle">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Imprimir", new { id = nota.NotaCreditoID })" target="_blank"
                                               class="btn btn-sm btn-outline-secondary" title="Imprimir">
                                                <i class="fas fa-print"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-file-invoice-dollar fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No hay notas de crédito registradas</h5>
                    <p class="text-muted">Utilice el botón "Nueva Nota" para crear una</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }

    .text-truncate {
        max-width: 250px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>