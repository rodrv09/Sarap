@model IEnumerable<Sarap.Models.Proveedore>

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="m-0">
            <i class="fas fa-truck me-2"></i>Registro de Proveedores
        </h2>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#agregarProveedorModal">
            <i class="fas fa-plus-circle me-1"></i> Nuevo Proveedor
        </button>
    </div>

    <!-- Alertas -->
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    <!-- Tarjeta de Proveedores -->
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="m-0">
                <i class="fas fa-list-alt me-2"></i>Listado de Proveedores
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4"><i class="fas fa-building me-1"></i> Empresa</th>
                            <th><i class="fas fa-user me-1"></i> Contacto</th>
                            <th><i class="fas fa-phone me-1"></i> Teléfono</th>
                            <th><i class="fas fa-envelope me-1"></i> Email</th>
                            <th><i class="fas fa-map-marker-alt me-1"></i> Dirección</th>
                            <th><i class="fas fa-calendar-day me-1"></i> Registro</th>
                            <th>Estado</th>
                            <th class="text-end pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var proveedor in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-semibold">@proveedor.NombreEmpresa</td>
                                    <td>@proveedor.ContactoNombre</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(proveedor.Telefono))
                                        {
                                            <a href="tel:@proveedor.Telefono" class="text-decoration-none">
                                                @proveedor.Telefono
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(proveedor.Email))
                                        {
                                            <a href="mailto:@proveedor.Email" class="text-decoration-none">
                                                @proveedor.Email
                                            </a>
                                        }
                                    </td>
                                    <td class="text-truncate" style="max-width: 150px;" title="@proveedor.Direccion">
                                        @proveedor.Direccion
                                    </td>
                                    <td>@proveedor.FechaRegistro?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (proveedor.Activo)
                                        {
                                            <span class="badge bg-success rounded-pill">
                                                <i class="fas fa-check-circle me-1"></i>Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary rounded-pill">
                                                <i class="fas fa-times-circle me-1"></i>Inactivo
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-2">
                                            <button class="btn btn-sm btn-outline-primary btnEditarProveedor"
                                                    data-proveedor='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(proveedor))'
                                                    title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            @if (proveedor.Activo)
                                            {
                                                <a class="btn btn-sm btn-outline-warning"
                                                   href="@Url.Action("Desactivar", "Proveedores", new { id = proveedor.ProveedorId })"
                                                   title="Desactivar">
                                                    <i class="fas fa-toggle-off"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-sm btn-outline-success"
                                                   href="@Url.Action("Activar", "Proveedores", new { id = proveedor.ProveedorId })"
                                                   title="Activar">
                                                    <i class="fas fa-toggle-on"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4 text-muted">
                                    <i class="fas fa-info-circle me-2"></i>No hay proveedores registrados
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Agregar Proveedor -->
<div class="modal fade" id="agregarProveedorModal" tabindex="-1" aria-labelledby="agregarProveedorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="agregarProveedorModalLabel">
                    <i class="fas fa-plus-circle me-2"></i>Agregar Proveedor
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <form asp-action="Crear" asp-controller="Proveedores" method="post">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="NombreEmpresaCrear" class="form-label">Nombre Empresa *</label>
                            <input type="text" class="form-control" id="NombreEmpresaCrear" name="NombreEmpresa" required
                                   placeholder="Ingrese el nombre de la empresa">
                        </div>
                        <div class="col-md-6">
                            <label for="ContactoNombreCrear" class="form-label">Nombre Contacto *</label>
                            <input type="text" class="form-control" id="ContactoNombreCrear" name="ContactoNombre" required
                                   placeholder="Ingrese el nombre del contacto">
                        </div>
                        <div class="col-md-6">
                            <label for="TelefonoCrear" class="form-label">Teléfono</label>
                            <input type="text" class="form-control" id="TelefonoCrear" name="Telefono"
                                   placeholder="Ingrese el teléfono">
                        </div>
                        <div class="col-md-6">
                            <label for="EmailCrear" class="form-label">Email</label>
                            <input type="email" class="form-control" id="EmailCrear" name="Email"
                                   placeholder="Ingrese el email">
                        </div>
                        <div class="col-12">
                            <label for="DireccionCrear" class="form-label">Dirección</label>
                            <input type="text" class="form-control" id="DireccionCrear" name="Direccion"
                                   placeholder="Ingrese la dirección completa">
                        </div>
                        <div class="col-md-6">
                            <label for="FechaRegistroCrear" class="form-label">Fecha de Registro</label>
                            <input type="date" class="form-control" id="FechaRegistroCrear" name="FechaRegistro">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Editar Proveedor -->
<div class="modal fade" id="editarProveedorModal" tabindex="-1" aria-labelledby="editarProveedorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="editarProveedorModalLabel">
                    <i class="fas fa-edit me-2"></i>Editar Proveedor
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <form asp-action="Editar" asp-controller="Proveedores" method="post">
                <div class="modal-body">
                    <input type="hidden" id="ProveedorId" name="ProveedorId" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="NombreEmpresa" class="form-label">Nombre Empresa *</label>
                            <input type="text" class="form-control" id="NombreEmpresa" name="NombreEmpresa" required>
                        </div>
                        <div class="col-md-6">
                            <label for="ContactoNombre" class="form-label">Nombre Contacto *</label>
                            <input type="text" class="form-control" id="ContactoNombre" name="ContactoNombre" required>
                        </div>
                        <div class="col-md-6">
                            <label for="Telefono" class="form-label">Teléfono</label>
                            <input type="text" class="form-control" id="Telefono" name="Telefono">
                        </div>
                        <div class="col-md-6">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="Email" name="Email">
                        </div>
                        <div class="col-12">
                            <label for="Direccion" class="form-label">Dirección</label>
                            <input type="text" class="form-control" id="Direccion" name="Direccion">
                        </div>
                        <div class="col-md-6">
                            <label for="FechaRegistro" class="form-label">Fecha de Registro</label>
                            <input type="date" class="form-control" id="FechaRegistro" name="FechaRegistro">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const modalEditar = new bootstrap.Modal(document.getElementById('editarProveedorModal'));

            document.querySelectorAll('.btnEditarProveedor').forEach(btn => {
                btn.addEventListener('click', function () {
                    const proveedor = JSON.parse(this.getAttribute('data-proveedor'));

                    document.getElementById('ProveedorId').value = proveedor.ProveedorId;
                    document.getElementById('NombreEmpresa').value = proveedor.NombreEmpresa;
                    document.getElementById('ContactoNombre').value = proveedor.ContactoNombre;
                    document.getElementById('Telefono').value = proveedor.Telefono ?? '';
                    document.getElementById('Email').value = proveedor.Email ?? '';
                    document.getElementById('Direccion').value = proveedor.Direccion ?? '';
                    document.getElementById('FechaRegistro').value = proveedor.FechaRegistro ? proveedor.FechaRegistro.split('T')[0] : '';

                    modalEditar.show();
                });
            });

            // Establecer fecha actual por defecto en el formulario de creación
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('FechaRegistroCrear').value = today;
        });
    </script>
}