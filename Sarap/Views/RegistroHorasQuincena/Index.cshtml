@model List<Sarap.Models.RegistroHorasQuincena>

@{
    ViewBag.Title = "Registro de Horas Quincena";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4 text-dark">Registro de Horas Quincena</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

<div class="mb-3">
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#agregarRegistroModal">
        <i class="fas fa-plus"></i> Agregar Registro
    </button>
</div>

<div class="card shadow-sm" style="background: white;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-bordered table-hover w-100 mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Id</th>
                        <th>Identidad</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Fin</th>
                        <th>Horas Ordinarias</th>
                        <th>Horas Incapacidad</th>
                        <th>Horas Vacaciones</th>
                        <th>Horas Feriado Ley</th>
                        <th>Horas Extra 15%</th>
                        <th>Horas Extra 20%</th>
                        <th>Horas Permiso Sin Goce</th>
                        <th>Fecha Registro</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var registro in Model)
                        {
                            <tr>
                                <td>@registro.Id</td>
                                <td>@registro.Identidad</td>
                                <td>@registro.FechaInicio?.ToString("yyyy-MM-dd")</td>
                                <td>@registro.FechaFin?.ToString("yyyy-MM-dd")</td>
                                <td>@registro.HorasOrdinarias</td>
                                <td>@registro.HorasIncapacidad</td>
                                <td>@registro.HorasVacaciones</td>
                                <td>@registro.HorasFeriadoLey</td>
                                <td>@registro.HorasExtra15</td>
                                <td>@registro.HorasExtra20</td>
                                <td>@registro.HorasPermisoSinGoce</td>
                                <td>@registro.FechaRegistro.ToString("yyyy-MM-dd")</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-outline-warning me-1" href="@Url.Action("Editar", "RegistroHorasQuincena", new { id = registro.Id })" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-sm btn-outline-danger" href="@Url.Action("Eliminar", "RegistroHorasQuincena", new { id = registro.Id })" title="Eliminar">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="13" class="text-center text-muted">No hay registros de horas.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Crear Registro -->
<div class="modal fade" id="agregarRegistroModal" tabindex="-1" aria-labelledby="agregarRegistroModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Crear" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="agregarRegistroModalLabel">Agregar Registro de Horas</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="IdentidadCrear" class="form-label">Identidad</label>
                        <select class="form-select" id="Identidad" name="Identidad" required>
                            <option value="" selected disabled>-- Seleccione Identidad --</option>
                            @foreach (var emp in ViewBag.Empleados)
                            {
                                <option value="@emp.Identidad">@emp.NombreCompleto (@emp.Identidad)</option>
                            }
                        </select>

                    </div>

                    <div class="mb-3">
                        <label for="FechaInicio" class="form-label">Fecha Inicio</label>
                        <input type="date" class="form-control" id="FechaInicio" name="FechaInicio" required />
                    </div>
                    <div class="mb-3">
                        <label for="FechaFin" class="form-label">Fecha Fin</label>
                        <input type="date" class="form-control" id="FechaFin" name="FechaFin" required />
                    </div>
                    <div class="mb-3">
                        <label for="HorasOrdinarias" class="form-label">Horas Ordinarias</label>
                        <input type="number" step="0.01" class="form-control" id="HorasOrdinarias" name="HorasOrdinarias" required />
                    </div>
                    <div class="mb-3">
                        <label for="HorasIncapacidad" class="form-label">Horas Incapacidad</label>
                        <input type="number" step="0.01" class="form-control" id="HorasIncapacidad" name="HorasIncapacidad" />
                    </div>
                    <div class="mb-3">
                        <label for="HorasVacaciones" class="form-label">Horas Vacaciones</label>
                        <input type="number" step="0.01" class="form-control" id="HorasVacaciones" name="HorasVacaciones" />
                    </div>
                    <div class="mb-3">
                        <label for="HorasFeriadoLey" class="form-label">Horas Feriado Ley</label>
                        <input type="number" step="0.01" class="form-control" id="HorasFeriadoLey" name="HorasFeriadoLey" />
                    </div>
                    <div class="mb-3">
                        <label for="HorasExtra15" class="form-label">Horas Extra 15%</label>
                        <input type="number" step="0.01" class="form-control" id="HorasExtra15" name="HorasExtra15" />
                    </div>
                    <div class="mb-3">
                        <label for="HorasExtra20" class="form-label">Horas Extra 20%</label>
                        <input type="number" step="0.01" class="form-control" id="HorasExtra20" name="HorasExtra20" />
                    </div>
                    <div class="mb-3">
                        <label for="HorasPermisoSinGoce" class="form-label">Horas Permiso Sin Goce</label>
                        <input type="number" step="0.01" class="form-control" id="HorasPermisoSinGoce" name="HorasPermisoSinGoce" />
                    </div>
                    <div class="mb-3">
                        <label for="FechaRegistro" class="form-label">Fecha Registro</label>
                        <input type="date" class="form-control" id="FechaRegistro" name="FechaRegistro" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
