@{
    ViewData["Title"] = "Reportes";
}

<div class="container mt-4">
    <div class="row">
        <!-- Clientes -->
        <div class="col-md-4">
            <div class="card mb-3 border-primary">
                <div class="card-header bg-primary text-white text-center">
                    Clientes
                </div>
                <div class="card-body bg-white text-center">
                    <h5 class="card-title text-primary display-3">@ViewBag.TotalClientes</h5>
                    <p class="card-text text-secondary">Total de clientes registrados.</p>
                    <a asp-controller="Reportes" asp-action="ExportarExcelClientes" class="btn btn-primary" target="_blank">
                        Descargar Excel Clientes
                    </a>
                </div>
            </div>
        </div>

        <!-- Proveedores -->
        <div class="col-md-4">
            <div class="card mb-3 border-success">
                <div class="card-header bg-success text-white text-center">
                    Proveedores
                </div>
                <div class="card-body bg-white text-center">
                    <h5 class="card-title text-success display-3">@ViewBag.TotalProveedores</h5>
                    <p class="card-text text-secondary">Total de proveedores registrados.</p>
                    <a asp-controller="Reportes" asp-action="ExportarExcelProveedores" class="btn btn-success" target="_blank">
                        Descargar Excel Proveedores
                    </a>
                </div>
            </div>
        </div>

        <!-- Usuarios -->
        <div class="col-md-4">
            <div class="card mb-3 border-info">
                <div class="card-header bg-info text-white text-center">
                    Usuarios
                </div>
                <div class="card-body bg-white text-center">
                    <h5 class="card-title text-info display-3">@ViewBag.TotalUsuarios</h5>
                    <p class="card-text text-secondary">Total de usuarios registrados.</p>
                    <a asp-controller="Reportes" asp-action="ExportarExcelUsuarios" class="btn btn-info" target="_blank">
                        Descargar Excel Usuarios
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Facturas -->
        <div class="col-md-4">
            <div class="card mb-3 border-danger">
                <div class="card-header bg-danger text-white text-center">
                    Facturas
                </div>
                <div class="card-body bg-white text-center">
                    <h5 class="card-title text-danger display-3">@ViewBag.TotalFacturas</h5>
                    <p class="card-text text-secondary">Total de facturas registradas.</p>
                    <a asp-controller="Reportes" asp-action="ExportarExcelFacturas" class="btn btn-danger" target="_blank">
                        Descargar Excel Facturas
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
