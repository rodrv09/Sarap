<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Panel de Control</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f6f9;
            padding-top: 56px;
            transition: background-color 0.3s, color 0.3s;
        }

        .navbar {
            background-color: #1f2d3d;
        }

        .navbar-brand {
            color: #fff !important;
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .navbar-brand img {
                height: 40px;
                width: auto;
            }

        .sidebar {
            background-color: #2f3e4e;
            height: 100vh;
            position: fixed;
            width: 220px;
            top: 56px;
            left: 0;
            padding-top: 20px;
            overflow-y: auto;
        }

            .sidebar a,
            .sidebar .nav-link {
                color: #bdc3c7;
                padding: 12px 20px;
                display: block;
                text-decoration: none;
            }

                .sidebar a:hover,
                .sidebar .nav-link:hover {
                    background-color: #1abc9c;
                    color: #fff;
                }

            .sidebar i {
                margin-right: 10px;
            }

        .main-content {
            margin-left: 220px;
            padding: 30px;
        }

            .main-content.sin-sidebar {
                margin-left: 0 !important;
            }

        footer {
            background-color: #1f2d3d;
            color: #fff;
            text-align: center;
            padding: 15px;
            position: relative;
            bottom: 0;
            width: 100%;
        }

        body.dark-mode {
            background-color: #121212;
            color: #e0e0e0;
        }

            body.dark-mode .navbar,
            body.dark-mode footer {
                background-color: #181818;
            }

            body.dark-mode .sidebar {
                background-color: #222;
            }

                body.dark-mode .sidebar a {
                    color: #ccc;
                }

                    body.dark-mode .sidebar a:hover {
                        background-color: #444;
                    }

        .navbar .fa-user-circle {
            font-size: 1.5rem;
        }

        #darkModeToggle {
            background: transparent;
            border: none;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/images/logo.png" alt="Logo Especias Sarapiquí" />
                Especias Sarapiquí
            </a>

            <div class="d-flex align-items-center ms-auto gap-3">
                <button id="darkModeToggle" class="btn btn-sm text-white" title="Modo oscuro">
                    <i class="fas fa-moon"></i>
                </button>

                <div class="dropdown">
                    <a class="text-white dropdown-toggle" href="#" role="button" id="usuarioDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user-circle"></i> @ViewBag.Usuario
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="usuarioDropdown">
                        <li><a class="dropdown-item" href="@Url.Action("Login", "Account")"><i class="fas fa-sign-out-alt me-2"></i>Cerrar sesión</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    @{
        var ocultarBarra = ViewData["OcultarBarraLateral"] as bool? ?? false;
    }

    @if (!ocultarBarra)
    {
        <div class="sidebar">
            <a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Inicio</a>
            <a href="@Url.Action("Index", "Categorias")"><i class="fas fa-tags"></i> Categorías</a>
            <a href="@Url.Action("Index", "Productos")"><i class="fas fa-box-open"></i> Productos</a>
            <a href="@Url.Action("Index", "Proveedores")"><i class="fas fa-truck-loading"></i> Proveedores</a>
            <a href="@Url.Action("Index", "Clientes")"><i class="fas fa-user-friends"></i> Clientes</a>
            <a href="@Url.Action("Index", "Facturas")"><i class="fas fa-file-invoice"></i> Facturas</a>
            <a href="@Url.Action("Index", "Usuarios")"><i class="fas fa-users-cog"></i> Usuarios</a>
            <a href="@Url.Action("Index", "NotaCredito")"><i class="fas fa-credit-card"></i> Nota Crédito</a>
            <a href="@Url.Action("Index", "Reportes")"><i class="fas fa-chart-line"></i> Reportes</a>

            <!-- Empleados -->
            <div class="nav-item dropdown px-3">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-briefcase"></i> Empleados
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="@Url.Action("Index", "Empleados")"><i class="fas fa-id-badge"></i> Gestión de Empleados</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("Index", "RegistroHorasQuincena")"><i class="fas fa-clock"></i> Registro de Horas</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("Index", "PlanillaColones")"><i class="fas fa-file-invoice-dollar"></i> Planilla</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("Index", "VacacionesEmpleado")"><i class="fas fa-umbrella-beach"></i> Vacaciones</a></li>
                </ul>
            </div>

            <a href="@Url.Action("Login", "Account")"><i class="fas fa-user-circle"></i> Cuenta</a>
        </div>
    }

    <!-- Main Content -->
    <main class="main-content @(ocultarBarra ? "sin-sidebar" : "")">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Dark Mode
        if (localStorage.getItem('modoOscuro') === 'true') {
            document.body.classList.add('dark-mode');
        }

        document.getElementById("darkModeToggle").addEventListener("click", () => {
            document.body.classList.toggle("dark-mode");
            localStorage.setItem("modoOscuro", document.body.classList.contains("dark-mode"));
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
