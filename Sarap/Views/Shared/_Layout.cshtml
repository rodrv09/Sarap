<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Panel de Control</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f6f9;
            padding-top: 56px;
            transition: background-color 0.3s, color 0.3s;
        }

        .navbar {
            background-color: #1f2d3d;
        }

        .navbar-brand {
            color: #fff !important;
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .navbar-brand img {
                height: 40px;
                width: auto;
            }

        .sidebar {
            background-color: #2f3e4e;
            height: 100vh;
            position: fixed;
            width: 220px;
            top: 56px;
            left: 0;
            padding-top: 20px;
        }

            .sidebar a {
                color: #bdc3c7;
                padding: 12px 20px;
                display: block;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #1abc9c;
                    color: #fff;
                }

            .sidebar i {
                margin-right: 10px;
            }

        .main-content {
            margin-left: 220px;
            padding: 30px;
        }

        footer {
            background-color: #1f2d3d;
            color: #fff;
            text-align: center;
            padding: 15px;
            position: relative;
            bottom: 0;
            width: 100%;
        }

        body.dark-mode {
            background-color: #121212;
            color: #e0e0e0;
        }

            body.dark-mode .navbar {
                background-color: #181818;
            }

            body.dark-mode .sidebar {
                background-color: #222;
            }

                body.dark-mode .sidebar a {
                    color: #ccc;
                }

                    body.dark-mode .sidebar a:hover {
                        background-color: #444;
                    }

            body.dark-mode footer {
                background-color: #181818;
            }

        .navbar .fa-user-circle {
            font-size: 1.5rem;
        }

        #darkModeToggle {
            background: transparent;
            border: none;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="~/images/logo.png" alt="Logo Especias Sarapiquí" />
                Especias Sarapiquí
            </a>
            <div class="d-flex align-items-center ms-auto gap-3">
                <button id="darkModeToggle" class="btn btn-sm text-white" title="Modo oscuro">
                    <i class="fas fa-moon"></i>
                </button>

                <div class="dropdown">
                    <a class="text-white dropdown-toggle" href="#" role="button" id="usuarioDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user-circle"></i> @ViewBag.Usuario
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="usuarioDropdown">
                        <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">Cerrar sesión</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="sidebar">
        <a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i>Inicio</a>
        <a href="@Url.Action("Index", "Productos")"><i class="fas fa-box"></i>Productos</a>
        <a href="@Url.Action("Index", "Proveedores")"><i class="fas fa-truck"></i> Proveedores</a>
        <a href="@Url.Action("Index", "Clientes")"><i class="fas fa-users"></i>Clientes</a>
        <a href="@Url.Action("Index", "Usuarios")"><i class="fas fa-user-tie"></i>Usuarios</a>
        <a href="@Url.Action("Index", "Empleados")"><i class="fas fa-user-tie"></i>Usuarios</a>

        <a href="@Url.Action("Login", "Account")"><i class="fas fa-user-tie"></i>Cuenta</a>

    </div>

    <main class="main-content">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        if (localStorage.getItem('modoOscuro') === 'true') {
            document.body.classList.add('dark-mode');
        }

        const toggle = document.getElementById("darkModeToggle");
        toggle.addEventListener("click", () => {
            document.body.classList.toggle("dark-mode");
            const activado = document.body.classList.contains("dark-mode");
            localStorage.setItem("modoOscuro", activado);
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
