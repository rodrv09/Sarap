@model Sarap.Models.CambiarContraseñaViewModel

@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 650px; margin: auto;">
        <div class="card-body p-5">

            <div class="text-center mb-4">
                <div class="rounded-circle bg-warning bg-opacity-25 d-inline-flex justify-content-center align-items-center"
                     style="width: 90px; height: 90px;">
                    <i class="fas fa-key text-warning" style="font-size: 40px;"></i>
                </div>
                <h3 class="mt-3 fw-bold">Cambiar Contraseña</h3>
                <p class="text-muted">Actualiza tu contraseña de forma segura</p>
            </div>

            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["Mensaje"]
                </div>
            }

            <form asp-action="CambiarContraseña" method="post">

                <div class="mb-3">
                    <label asp-for="ContraseñaActual" class="fw-semibold"></label>
                    <input asp-for="ContraseñaActual" type="password" class="form-control rounded-3" />
                    <span asp-validation-for="ContraseñaActual" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NuevaContraseña" class="fw-semibold"></label>
                    <input asp-for="NuevaContraseña" type="password" class="form-control rounded-3" />
                    <span asp-validation-for="NuevaContraseña" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmarContraseña" class="fw-semibold"></label>
                    <input asp-for="ConfirmarContraseña" type="password" class="form-control rounded-3" />
                    <span asp-validation-for="ConfirmarContraseña" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">

                    <a href="@Url.Action("Cuenta", "Account")"
                       class="btn btn-outline-secondary rounded-3 px-4">
                        <i class="fas fa-arrow-left me-1"></i> Volver
                    </a>

                    <button type="submit" class="btn btn-warning rounded-3 px-4">
                        <i class="fas fa-save me-1"></i> Actualizar Contraseña
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}