@model List<Sarap.Models.VacacionesEmpleado>

@{
    ViewBag.Title = "Vacaciones Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4 text-dark">Vacaciones de Empleados</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

<div class="card shadow-sm" style="background: white;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-bordered table-hover w-100 mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Identidad</th>
                        <th>Nombre Completo</th>
                        <th>Días Disponibles</th>
                        <th>Días Usados</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var vacacion in Model)
                        {
                            <tr>
                                <td>@vacacion.Identidad</td>
                                <td>@vacacion.NombreCompleto</td>
                                <td>@(vacacion.DiasDisponibles ?? 0)</td>
                                <td>@(vacacion.DiasUsados ?? 0)</td>
                                <td>
                                    <button class="btn btn-sm btn-primary"
                                            data-bs-toggle="modal"
                                            data-bs-target="#modalSolicitar@(vacacion.Id)">
                                        <i class="fas fa-plus"></i> Solicitar Días
                                    </button>
                                </td>
                            </tr>

                            <!-- Modal para solicitar días -->
                            <div class="modal fade" id="modalSolicitar@(vacacion.Id)" tabindex="-1" aria-labelledby="modalLabel@(vacacion.Id)" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form asp-action="Solicitar" asp-controller="VacacionesEmpleado" method="post">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="modalLabel@(vacacion.Id)">Solicitar días para @vacacion.NombreCompleto</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                            </div>
                                            <div class="modal-body">
                                                <input type="hidden" name="id" value="@vacacion.Id" />
                                                <div class="mb-3">
                                                    <label for="cantidadDias" class="form-label">Cantidad de días</label>
                                                    <input type="number" class="form-control" name="cantidadDias" min="1" required />
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-success">Solicitar</button>
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No hay registros de vacaciones.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
